#!/usr/bin/env bash
set -euo pipefail

TEXT=""
REFS=""
OUT=""
LANG="en"
DEVICE="cuda"
SEED=""
GPU=""

while [[ $# -gt 0 ]]; do
  case "$1" in
    --text) TEXT="$2"; shift 2;;
    --ref) REFS="$2"; shift 2;;
    --out) OUT="$2"; shift 2;;
    --lang) LANG="$2"; shift 2;;
    --device) DEVICE="$2"; shift 2;;
    --seed) SEED="$2"; shift 2;;
    --gpu) GPU="$2"; shift 2;;
    *) echo "unknown arg: $1" >&2; exit 2;;
  esac
done

if [[ -z "$TEXT" || -z "$REFS" || -z "$OUT" ]]; then
  echo "usage: $0 --text <text> --ref <ref1.wav[,ref2.wav,...]> --out <wavPath> [--gpu N] [--seed N]" >&2
  exit 2
fi

if [[ -n "$GPU" ]]; then
  export CUDA_VISIBLE_DEVICES="$GPU"
fi

if [[ -n "$SEED" ]]; then
  export TORTOISE_SEED="$SEED"
fi

TORTOISE_TEXT="$TEXT" \
TORTOISE_REFS="$REFS" \
TORTOISE_OUT="$OUT" \
/raid/storyforge_envs/micromamba_root/envs/tortoise_pip/bin/python - <<"PY"
import os, random
from pathlib import Path

seed = os.environ.get("TORTOISE_SEED")
if seed:
    try:
        random.seed(int(seed))
    except Exception:
        pass

text = os.environ["TORTOISE_TEXT"]
refs = [p.strip() for p in os.environ["TORTOISE_REFS"].split(",") if p.strip()]
out_path = Path(os.environ["TORTOISE_OUT"]).expanduser().resolve()
out_path.parent.mkdir(parents=True, exist_ok=True)

preset = os.environ.get("TORTOISE_PRESET", "standard")

import torchaudio
from tortoise.api import TextToSpeech
from tortoise.utils.audio import load_audio

# Load reference wavs as voice samples (Tortoise voice cloning path)
voice_samples = []
for rp in refs:
    p = Path(rp)
    if not p.exists():
        raise FileNotFoundError(rp)
    # Tortoise expects 22.05k internally
    wav = load_audio(str(p), 22050)
    voice_samples.append(wav)

tts = TextToSpeech(kv_cache=True)
conditioning_latents = tts.get_conditioning_latents(voice_samples)

audio = tts.tts_with_preset(
    text,
    voice_samples=voice_samples,
    conditioning_latents=conditioning_latents,
    preset=preset,
)

torchaudio.save(str(out_path), audio.squeeze(0).cpu(), 24000)
print("wrote", out_path)
PY
